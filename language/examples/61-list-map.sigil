⟦ Test: Map Function
   Expected output: 30
   Double all elements and sum
⟧

λ double(x: ℤ) → ℤ = x * 2

λ map_double(xs: [ℤ]) → [ℤ] ≡xs {
  [] → [] |
  [x, .rest] → [double(x), ..map_double(rest)]
}

λ sum(xs: [ℤ]) → ℤ ≡xs {
  [] → 0 |
  [x, .rest] → x + sum(rest)
}

λ main() → ℤ = sum(map_double([1, 2, 3, 4, 5]))
