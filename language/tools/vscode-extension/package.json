{
  "name": "sigil-language",
  "displayName": "Sigil Language",
  "description": "Language support for Sigil - The Machine-First Programming Language",
  "version": "0.1.0",
  "publisher": "sigil-lang",
  "repository": {
    "type": "git",
    "url": "https://github.com/inerte/sigil"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "sigil",
    "functional",
    "ai-first",
    "machine-first"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:sigil"
  ],
  "contributes": {
    "languages": [
      {
        "id": "sigil",
        "aliases": [
          "Sigil",
          "sigil"
        ],
        "extensions": [
          ".sigil"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "sigil",
        "scopeName": "source.sigil",
        "path": "./syntaxes/sigil.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Sigil",
      "properties": {
        "sigil.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the Sigil language server."
        },
        "sigil.lsp.path": {
          "scope": "window",
          "type": "string",
          "default": "",
          "description": "Custom path to the Sigil LSP server. Leave empty to use bundled server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "tsc -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.2.1",
    "typescript": "^5.7.2"
  }
}
