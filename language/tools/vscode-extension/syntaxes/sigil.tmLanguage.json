{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sigil",
  "scopeName": "source.sigil",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#types"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.sigil",
          "begin": "‚ü¶",
          "end": "‚üß",
          "patterns": [
            {
              "name": "keyword.other.documentation.sigil",
              "match": "@\\w+"
            }
          ]
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sigil",
          "match": "\\b(Œª|t|c|mut|let)\\b"
        },
        {
          "name": "keyword.control.flow.sigil",
          "match": "‚â°"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.sigil",
          "match": "‚Üí"
        },
        {
          "name": "keyword.operator.match.sigil",
          "match": "‚â°"
        },
        {
          "name": "keyword.operator.list.sigil",
          "match": "‚Ü¶|‚ä≥|‚äï"
        },
        {
          "name": "keyword.operator.membership.sigil",
          "match": "‚àà"
        },
        {
          "name": "keyword.operator.arithmetic.sigil",
          "match": "[+\\-*/%]"
        },
        {
          "name": "keyword.operator.comparison.sigil",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.sigil",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.assignment.sigil",
          "match": "="
        },
        {
          "name": "punctuation.separator.sigil",
          "match": "[,|]"
        },
        {
          "name": "punctuation.section.sigil",
          "match": "[\\[\\]\\{\\}\\(\\)]"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.sigil",
          "match": "\\b(‚Ñ§|‚Ñù|ùîπ|ùïä|ùïå|‚ÑÇ)\\b"
        },
        {
          "name": "constant.language.boolean.sigil",
          "match": "‚ä§|‚ä•"
        },
        {
          "name": "constant.language.empty.sigil",
          "match": "‚àÖ"
        },
        {
          "name": "entity.name.type.sigil",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "constant.numeric.sigil",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        },
        {
          "name": "constant.language.boolean.sigil",
          "match": "\\b(true|false|‚ä§|‚ä•)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sigil",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sigil",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sigil",
          "match": "(?<=Œª)\\w+(?=\\()"
        },
        {
          "name": "entity.name.function.call.sigil",
          "match": "\\b[a-z_][a-zA-Z0-9_]*(?=\\()"
        }
      ]
    }
  }
}
