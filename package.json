{
  "name": "sigil-lang",
  "version": "0.1.0",
  "type": "module",
  "description": "Sigil - A machine-first programming language optimized for AI code generation",
  "private": true,
  "workspaces": [
    "language/compiler",
    "language/tools/*",
    "projects/todo-app"
  ],
  "scripts": {
    "build": "pnpm --filter @sigil-lang/compiler build",
    "test": "pnpm -r test",
    "lex": "node language/compiler/dist/cli.js lex",
    "sigil:test:stdlib": "node language/compiler/dist/cli.js test language/stdlib-tests/tests",
    "sigil:test:algorithms": "node language/compiler/dist/cli.js test projects/algorithms/tests",
    "sigil:test:todo": "node language/compiler/dist/cli.js test projects/todo-app/tests",
    "sigil:test:all": "pnpm sigil:test:stdlib && pnpm sigil:test:algorithms && pnpm sigil:test:todo"
  },
  "packageManager": "pnpm@9.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/inerte/sigil"
  },
  "keywords": [
    "programming-language",
    "compiler",
    "ai-first",
    "machine-first",
    "functional-programming",
    "type-inference",
    "llm-optimized"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "tsx": "^4.20.5"
  }
}
